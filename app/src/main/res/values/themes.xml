<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCinemaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/my_pink</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/my_pink</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">#B7B7B7</item>
        <item name="colorPrimaryVariant">#BFCCB5</item>
        <item name="colorOnPrimary">#EDC6B1</item>

        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#BFCCB5</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/my_green</item>

    </style>
</resources>